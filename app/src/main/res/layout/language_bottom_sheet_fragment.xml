<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_background"
    android:minHeight="240dp"
    android:layout_height="match_parent">
    
    
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/languageButtonGeo"
        android:src="@drawable/georgia"
        android:background="@null"
        android:layout_width="@dimen/language_button_dimen"
        android:layout_height="@dimen/language_button_dimen"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/languageButtonEng"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/languageButtonEng"
        android:src="@drawable/united_kingdom"
        android:background="@null"
        android:layout_width="@dimen/language_button_dimen"
        android:layout_height="@dimen/language_button_dimen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/languageButtonGeo"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>